{% extends "layout.njk" %}

{% block page %} 
<h1>Fórum</h1>
{% endblock page%}

{% block content %}
<div class="container container-forum">
    <div class="buttons">
        <a href="#" class="button">Novo tópico</a>
    </div>
    <div class="forum-show-wrapper">
        {% for topic in topics %}
        <div class="topic" id="{{topic.id}}">
            <div class="info">
                <p>{{topic.title or "Tópico sem tema"}}</p>
                <p>{{topic.date  or "Tópico sem data"}}</p>
            </div>
            <div class="status">
                <img src="" alt="Fórum Fechado!">
            </div>
        </div>
        {% endfor %}
    </div>
</div>

{% endblock content %}